{
    "name": "tuupola/branca",
    "description": "Secure alternative to JWT. Authenticated Encrypted API Tokens. ",
    "keywords": [
        "jwt",
        "fernet",
        "token",
        "authentication"
    ],
    "homepage": "https://github.com/tuupola/branca-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Mika Tuupola",
            "email": "tuupola@appelsiini.net",
            "homepage": "http://www.appelsiini.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "paragonie/sodium_compat": "^1.1",
        "tuupola/base62": "^0.8.0 || ^0.9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7",
        "squizlabs/php_codesniffer": "^3.0",
        "overtrue/phplint": "^1.0",
        "nyholm/nsa": "^1.1",
        "phpstan/phpstan": "^0.9.1"
    },
    "autoload": {
        "psr-4": {
            "Branca\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Branca\\": "tests"
        }
    }
}
